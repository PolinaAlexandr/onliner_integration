<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="onliner_product_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">onliner_product.product_template_form_view_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[1]" position="inside">
                    <div>
                        <label for="isCashless"/>
                        <field name="isCashless"/>
                    </div>
                    <div>
                        <label for="isCredit"/>
                        <field name="isCredit"/>
                    </div>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='sales']" position="inside">
                    <label for="delivery_country_id" string="Delivery Country"/>
                    <field name="delivery_country_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>