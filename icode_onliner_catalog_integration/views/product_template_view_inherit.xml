<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="onliner_product_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">onliner_product.product_template_form_view_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[1]" position="inside">
                    <div>
                        <field name="is_сashless"/>
                        <label for="is_сashless"/>
                    </div>
                    <div>
                        <field name="is_сredit"/>
                        <label for="is_сredit"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='sales']" position="inside">
                    <field name="delivery_country_id"/>
                    <label for="delivery_country_id" string="Delivery Country"/>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group name="delivery">
                        <field name="delivery_town_time"/>
                        <field name="delivery_town_price"/>
                        <field name="delivery_country_time"/>
                        <field name="delivery_country_price"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>