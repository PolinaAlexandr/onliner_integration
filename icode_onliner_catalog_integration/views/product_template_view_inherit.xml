<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="onliner_product.product_template_view_inherit" model="ir.ui.view">
            <field name="name">product.product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[1]" position="inside">
                    <group name="onliner_delivery_payment_params">
                        <div>
                            <field name="is_сashless"/>
                            <label for="is_сashless"/>
                        </div>
                        <div>
                            <field name="is_сredit"/>
                            <label for="is_сredit"/>
                        </div>
                    </group>
                </xpath>
                <xpath expr="//page[@name='sales']" position="inside">
                    <group name="onliner_delivery_country">
                        <field name="delivery_country_id"/>
                        <label for="delivery_country_id" string="Delivery Country"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group name="onliner_delivery">
                        <field name="delivery_town_time"/>
                        <field name="delivery_town_price"/>
                        <field name="delivery_country_time"/>
                        <field name="delivery_country_price"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>