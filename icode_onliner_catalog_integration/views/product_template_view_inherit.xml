<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_onliner_view_inherit" model="ir.ui.view">
            <field name="name">product.product.template.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_cashless"/>
                        <label for="is_cashless"/>
                    </div>
                    <div>
                        <field name="is_credit"/>
                        <label for="is_credit"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='sales']" position="inside">
                    <group name="onliner_delivery_country">
                        <field name="importer"/>
                        <field name="producer"/>
                        <field name="vendor"/>
                        <field name="warranty"/>
                        <field name="delivery_country_id"/>
                        <field name="courier_delivery_prices"/>
<!--                        <field name="terms_of_delivery"/>-->
<!--                        <field name="custom_term" attrs="{'invisible':[('terms_of_delivery', '=', 'none'), ('terms_of_delivery', '=', 'default')]}"/>-->
<!--                        <field name="courier_delivery_prices" widget="many2many_tags"/>-->
                    </group>
                </xpath>
                <xpath expr="//page[@name='inventory']" position="inside">
                    <group name="onliner_delivery">
                        <field name="delivery_town_time"/>
                        <field name="delivery_town_price"/>
                        <field name="delivery_country_time"/>
                        <field name="delivery_country_price"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>