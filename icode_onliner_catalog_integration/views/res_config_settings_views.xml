<odoo>
    <record id="res_config_settings_view_form_icode_onliner_by_integration" model="ir.ui.view">
        <field name="name">res.config.settings.form.icode_onliner_by_integration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- add before the Access Rights section -->
            <xpath expr="//div[@id='access_rights']" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="icode_onliner_by_integration_token"/>
                        <field name="icode_onliner_by_integration_token"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_icode_onliner_by_integration" model="ir.ui.view">
        <field name="name">res.config.settings.form.icode_onliner_by_integration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- add before the Access Rights section -->
            <xpath expr="//div[@id='access_rights']" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for='name'/>
                        <field name="name"/>
                        <label for='code'/>
                        <field name="code"/>
                        <label for='type'/>
                        <field name="type"/>
                        <label for='currency_id'/>
                        <field name="currency_id"/>
                        <label for='amount'/>
                        <field name="amount"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>