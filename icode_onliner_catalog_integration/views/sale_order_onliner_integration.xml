<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
        <record id="sale_order_onliner_integration_view" model="ir.ui.view">
            <field name="name">sale.order.onliner.integration.form.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="inside">
                    <h1>
                        <field name="key" readonly="1"/>
                    </h1>
                </xpath>
                <xpath expr="//group[1]/group[2]" position="inside">
                        <field name="updated_at" readonly="1" attrs="{'invisible:[('key', '=', '')]'}"/>
                </xpath>
                <xpath expr="//group[1]/group[2]" position="after">
                        <field name="onliner_delivery_status" attrs="{'invisible:[('key', '=', '')]'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>